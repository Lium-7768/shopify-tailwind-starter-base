{%- style -%}
  .swiper-pagination-bullet-active {
    background: {{ section.settings.active_dot_color }};
  }
{%- endstyle -%}

<div class="twcss-container twcss-mx-auto twcss-px-4 twcss-py-8 !twcss-max-w-[1280px]">
  {% render 'homepage-title', white_title: 'Featured', blue_title: 'Brands' %}

  <div class="swiper brands-swiper">
    <div class="swiper-wrapper twcss-gap-[24px]">
      {%- for block in section.blocks -%}
        <div
          class="swiper-slide !twcss-w-[90px] !twcss-h-[116px] !twcss-flex twcss-items-center lg:!twcss-w-[139px] !twcss-mr-0"
          {{ block.shopify_attributes }}
        >
          {%- if block.settings.brand_link != blank -%}
            <a href="{{ block.settings.brand_link }}" class="twcss-block">
          {%- endif -%}
          <img
            width="90"
            height="90"
            src="{{ block.settings.brand_logo | img_url: 'medium' }}"
            alt="{{ block.settings.brand_name }}"
            loading="lazy"
            class="twcss-max-h-16 twcss-w-auto twcss-mx-auto twcss-object-contain"
          >
          {%- if block.settings.brand_link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    <div class="swiper-button-prev !twcss-bg-white !twcss-w-[40px] !twcss-h-[40px] twcss-rounded-full twcss-shadow-lg  !twcss-hidden md:!twcss-flex !twcss-text-black after:!twcss-content-['']  !twcss-left-[-16px]">
      {% render 'icon-chevron-left' %}
    </div>
    <div class="swiper-button-next !twcss-bg-white !twcss-w-[40px] !twcss-h-[40px] twcss-rounded-full twcss-shadow-lg  !twcss-hidden md:!twcss-flex !twcss-text-black after:!twcss-content-['']  !twcss-right-[-16px]">
      {% render 'icon-chevron-right' %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.brands-swiper', {
      slidesPerView: 2,
      spaceBetween: 20,
      loop: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev'
      },
      breakpoints: {
        640: {
          slidesPerView: 3
        },
        768: {
          slidesPerView: 4
        },
        1024: {
          slidesPerView: 5
        }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Featured Brands",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Brands"
    },
    {
      "type": "color",
      "id": "active_dot_color",
      "label": "Active Dot Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Brand Logo"
        },
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Brand Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Brands",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}
