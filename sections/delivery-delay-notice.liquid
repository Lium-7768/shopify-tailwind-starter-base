{%- if section.settings.show_notice -%}
  <div
    class="twcss-bg-[#C2E3FF] twcss-relative twcss-flex twcss-justify-center twcss-items-center"
    id="deliveryDelayNotice"
  >
    <div class="twcss-flex-1 md:twcss-max-w-7xl twcss-relative twcss-flex twcss-justify-center twcss-items-baseline md:twcss-items-stretch twcss-px-5 twcss-py-4">
      <span class="twcss-mr-2.5 twcss-self-start">
        <img src="{{ 'icon-clock.svg' | asset_url }}" alt="Clock icon" width="32" height="32">
      </span>
      <div class="twcss-flex twcss-flex-col twcss-flex-1 twcss-tracking-[0.02rem]">
        <span class="twcss-text-[#1746A2] twcss-text-2xl twcss-font-bold">
          {{- section.settings.notice_heading | escape -}}
        </span>

        <span class="twcss-text-[#353535] twcss-flex twcss-flex-col lg:twcss-items-center lg:twcss-flex-row twcss-flex-1">
          <span class="!twcss-text-base twcss-mr-2">
            {{- section.settings.notice_text -}}
          </span>
          {%- if section.settings.button_link != blank -%}
            <a
              href="{{ section.settings.button_link }}"
              class="twcss-text-sm twcss-font-semibold twcss-text-[#1746A2]"
            >
              {{- section.settings.button_text -}}
            </a>
          {%- endif -%}
        </span>
      </div>
      <button
        class="twcss-flex twcss-items-baseline md:twcss-items-center twcss-justify-center"
        aria-label="{{ 'general.accessibility.close' | t }}"
        onclick="document.getElementById('deliveryDelayNotice').style.display='none'"
      >
        <img src="{{ 'icon-close-bold.svg' | asset_url }}" alt="Close icon" width="16" height="16">
      </button>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Delivery Delay Notice",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_notice",
      "label": "Show Notice",
      "default": false
    },
    {
      "type": "text",
      "id": "notice_heading",
      "label": "Notice Heading",
      "default": "Delivery Delays in Selected Area"
    },
    {
      "type": "text",
      "id": "notice_text",
      "label": "Notice Text",
      "default": "We are experiencing delivery delays in West Coast. Please allow extra time for your order to arrive. Thank you for your patience!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "See more info Â»"
    }
  ],
  "presets": [
    {
      "name": "Delivery Delay Notice"
    }
  ]
}
{% endschema %}
