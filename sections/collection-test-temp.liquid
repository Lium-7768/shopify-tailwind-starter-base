<section class="md:twcss-max-w-7xl twcss-max-w-screen-sm twcss-mx-auto twcss-px-4 twcss-py-10">
  {%- for product in section.settings.collection.products -%}
    <div class="swiper-slide !twcss-h-auto">
      {% render 'product-card', product: product, show_vendor: true, show_new_tag: true, card_type: 'list' %}
    </div>
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "Collection Test Temp",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Collection Test Temp"
    }
  ]
}
{% endschema %}
