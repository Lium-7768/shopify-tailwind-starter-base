          }
        },
        {
          "type": "solution",
          "settings": {
            "title": "Cold Chain Solutions"
          }
        },
        {
          "type": "solution",
          "settings": {
            "title": "Intermodal Transport Services"
          }
        },
        {
          "type": "solution",
          "settings": {
            "title": "Real-Time Tracking and Monitoring"
          }
        },
        {
          "type": "solution",
          "settings": {
            "title": "Green Transportation Initiatives"
          }
        }
      ]
    }
  ]
}
{% endschema %}
