<header class='bg-[#1e3d8f] py-[15px]'>
  <div class='flex items-center justify-between max-w-[1400px] mx-auto px-5'>
    {%- comment -%}Logo Section{%- endcomment -%}
    <div class='flex items-center flex-1 gap-[30px]'>
      <a href='/' class='max-w-[150px]'>
        <img src='{{ section.settings.logo | img_url: 'master' }}' alt='{{ shop.name }}' class='w-full h-auto'>
      </a>

      <nav>
        <ul class='flex gap-5 list-none m-0 p-0'>
          <li><a href='/products' class='text-white no-underline whitespace-nowrap'>Products</a></li>
          <li><a href='/sales' class='text-white no-underline whitespace-nowrap'>Sales</a></li>
          <li><a href='/brands' class='text-white no-underline whitespace-nowrap'>Brands</a></li>
        </ul>
      </nav>
    </div>

    {%- comment -%}Search Section{%- endcomment -%}
    <div class='flex-1 flex items-center'>
      <form action='/search' class='w-full relative'>
        <input
          type='text'
          name='q'
          class='w-full py-2 pl-4 pr-10 rounded border-none text-sm'
          placeholder='{{ section.settings.search_placeholder }}'
        >
        <button type='submit' class='absolute right-[10px] top-1/2 -translate-y-1/2 bg-transparent border-0 p-0 cursor-pointer'>
          <svg class='w-4 h-4 fill-[#666]' aria-hidden='true' focusable='false'>
            <use xlink:href="#icon-search"></use>
          </svg>
        </button>
      </form>
    </div>

    {%- comment -%}Actions Section{%- endcomment -%}
    <div class='flex-1 flex items-center justify-end gap-5'>
      <a href='/quick-order' class='text-white no-underline flex items-center gap-[5px] whitespace-nowrap'>
        <span class='w-5 h-5 bg-white/20 rounded-full inline-block'></span>
        <span>Quick Order</span>
      </a>
      <a href='/price-list' class='text-white no-underline flex items-center gap-[5px] whitespace-nowrap'>
        <span class='w-5 h-5 bg-white/20 rounded-full inline-block'></span>
        <span>Price List</span>
      </a>
      <div class=''>
        <span class='w-5 h-5 bg-white/20 rounded-full inline-block'></span>
      </div>
      <div>
        <button class='bg-transparent border-0 text-white flex items-center gap-[5px] cursor-pointer p-0'>
          <span class='w-5 h-5 bg-white/20 rounded-full inline-block'></span>
          <span>Frank</span>
          <span class='border-l-[5px] border-r-[5px] border-t-[5px] border-l-transparent border-r-transparent border-t-white ml-[5px]'></span>
        </button>
      </div>
      <div>
        <button class='bg-white/10 border-0 text-white px-[15px] py-2 rounded flex items-center gap-[10px] cursor-pointer'>
          <span>4 items</span>
          <span class='opacity-50'>|</span>
          <span>$ 999.99</span>
        </button>
      </div>
    </div>
  </div>
</header>

