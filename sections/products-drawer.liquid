{%- style -%}
  .twcss-animate-slide-in {
    animation: slideIn 300ms ease-out forwards;
  }

  .twcss-animate-slide-out {
    animation: slideOut 300ms ease-in forwards;
  }

  @keyframes slideIn {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(0);
    }
  }

  @keyframes slideOut {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
{%- endstyle -%}

