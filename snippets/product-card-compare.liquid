{% comment %}
  Parameters:
  - product: The product object (required)
{% endcomment %}

{%- liquid
  assign compare_class = 'twcss-inline-flex twcss-items-center twcss-my-1 twcss-mb-3 ' | append: compare_class
-%}

<div class="{{ compare_class }}">
  <input
    type="checkbox"
    id="compare-{{ product.id }}"
    name="compare"
    value="{{ product.id }}"
    class="twcss-mr-1 twcss-w-6 twcss-h-6"
  >
  <label for="compare-{{ product.id }}" class="twcss-text-sm twcss-cursor-pointer"> Compare </label>
</div>
