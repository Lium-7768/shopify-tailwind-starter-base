<aside
  aria-labelledby="verticalTitle"
  class="facets-wrapper !twcss-p-[10px] twcss-mr-6{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
  id="main-collection-filters"
  data-id="{{ section.id }}"
>
  {% render 'facets',
    results: collection,
    enable_filtering: section.settings.enable_filtering,
    enable_sorting: section.settings.enable_sorting,
    filter_type: section.settings.filter_type,
    paginate: paginate
  %}
</aside>
