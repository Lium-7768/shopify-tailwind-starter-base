{%- liquid
  assign wrapper_classes = 'twcss-flex twcss-items-baseline twcss-justify-between ' | append: wrapper_classes
  assign white_title_classes = 'twcss-text-lg lg:twcss-text-2xl twcss-font-bold !twcss-text-accent-default ' | append: white_title_classes
  assign blue_title_classes = 'twcss-text-lg lg:twcss-text-2xl twcss-font-semibold twcss-text-[#5F9DF7] ' | append: blue_title_classes
  assign link_classes = 'twcss-flex twcss-font-bold twcss-items-center twcss-text-sm twcss-text-[#1746A2] hover:twcss-text-blue-800 twcss-w-1/4 twcss-flex-row-reverse ' | append: link_classes

  assign white_title = white_title | default: section.settings.white_title
  assign blue_title = blue_title | default: section.settings.blue_title
  assign link_text = link_text | default: section.settings.link_text
  assign link_url = link_url | default: section.settings.link_url
-%}

<div class=" {{ wrapper_classes }}">
  <h2 class=" {{ white_title_classes }}">
    {{ white_title }}
    <span class="{{ blue_title_classes }}">{{ blue_title }}</span>
  </h2>
  {% if link_url != blank %}
    <a
      href="{{ link_url }}"
      class="{{ link_classes }}"
    >
      <span class="twcss-order-2">{{ link_text }}</span>
      <span class="twcss-order-1">{% render 'icon-chevron-right' %}</span>
    </a>
  {% endif %}
</div>
